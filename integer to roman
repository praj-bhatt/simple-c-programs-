#This code converts any number between 1 to 3999 from integral to roman.

#include <stdio.h>

int main()
{
    int n, i;
    int values[13];
    char *symbols[13];

    values[0] = 1000; symbols[0] = "M";
    values[1] = 900;  symbols[1] = "CM";
    values[2] = 500;  symbols[2] = "D";
    values[3] = 400;  symbols[3] = "CD";
    values[4] = 100;  symbols[4] = "C";
    values[5] = 90;   symbols[5] = "XC";
    values[6] = 50;   symbols[6] = "L";
    values[7] = 40;   symbols[7] = "XL";
    values[8] = 10;   symbols[8] = "X";
    values[9] = 9;    symbols[9] = "IX";
    values[10] = 5;   symbols[10] = "V";
    values[11] = 4;   symbols[11] = "IV";
    values[12] = 1;   symbols[12] = "I";

    printf("Enter an integer (1 - 3999): ");
    scanf("%d", &n);

    if (n < 1 || n > 3999)
    {
        printf("Number out of range! Please enter between 1 and 3999.\n");
        return 0;
    }

    printf("Roman numeral: ");

    for (i = 0; i < 13; i++)
    {
        while (n >= values[i])
        {
            printf("%s", symbols[i]);
            n -= values[i]; 
        }
    }

    printf("\n");
    return 0;
}

