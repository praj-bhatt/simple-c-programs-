#include <stdio.h>

double power(int x, int y) {
    double result = 1.0;
    int i;

    if (y > 0) {
        for (i = 1; i <= y; i++) {
            result = result * x; }
    }

    else if (y < 0) {
        for (i = 1; i <= -y; i++) 
{
            result = result * x;
}
        result = 1.0 / result;
    }
    else 
{
        result = 1.0; }
return result;

}

int main() 
{
    int x, y;

    double ans;

    printf("Enter base (x): ");

    scanf("%d", &x);

    printf("Enter exponent (y): ");

    scanf("%d", &y);

    ans = power(x, y);

    printf("%d raised to %d is %lf\n", x, y, ans);

    return 0;

}

