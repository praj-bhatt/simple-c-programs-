#include <stdio.h>
#include <string.h>

int main() {
    char s[100], r[100];
    int i, j, n;

    printf("Enter a string: ");
    gets(s);   // Turbo C compatible. Avoid in modern compilers.

    n = strlen(s);
    j = 0;

    for(i = n - 1; i >= 0; i--) {
        r[j] = s[i];
        j++;
    }
    r[j] = '\0';

    printf("Reversed string: %s", r);

    return 0;
}
