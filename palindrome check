#This program shows whether a given number is palindrome or not.

#include <stdio.h>

int main()
{
    int n, r, s, t;

    s = 0;

    printf("Enter a number: ");
    scanf("%d", &n);

    t = n;

    while (t > 0)
    {
        r = t % 10;
        s = (s * 10) + r;
        t = t / 10;
    }

    if (n == s)
        printf("%d is a palindrome number.\n", n);
    else
        printf("%d is not a palindrome number.\n", n);

    return 0;
}


#Output:

Enter a number: 101

101 is a palindrome number.
