#include <stdio.h>

int main() {
    int n, i, flag;

    printf("Enter a number: ");
    scanf("%d", &n);

    flag = 0;  // flag = 0 means prime until proven otherwise

    if (n <= 1) {
        flag = 1;  // 0 and 1 are not prime
    } else {
        for (i = 2; i * i <= n; i++) {
            if (n % i == 0) {
                flag = 1;  // not prime
                break;
            }
        }
    }

    if (flag == 0)
        printf("%d is a prime number.\n", n);
    else
        printf("%d is not a prime number.\n", n);

    return 0;
}


#Output:

Enter a number: 9

9 is not a prime number.
